resource "aws_security_group" "eks_cluster_sg" {
  vpc_id = module.vpc.vpc_id

  ingress {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "rebtel-${var.environment}-eks-cluster-sg"
  }
}

resource "aws_security_group" "eks_node_sg" {
  vpc_id = module.vpc.vpc_id

  ingress {
    from_port   = 0
